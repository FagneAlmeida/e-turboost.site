{
    "version": 2,
    "builds": [
        {
            "src": "app.py",
            "use": "@vercel/python",
            "config": {
                "maxLambdaSize": "15mb",
                "runtime": "python3.9"
            }
        },
        {
            "src": "public/**",
            "use": "@vercel/static"
        }
    ],
    "routes": [
        {
            "src": "/(.*\\.(css|js|ico|png|jpg|jpeg|gif|svg|mp4))",
            "dest": "/public/$1"
        },
        {
            "src": "/(.*)",
            "dest": "app.py"
        }
    ]
}
